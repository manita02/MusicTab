{
    "compilerOptions": {
      "target": "ES2022",                  
      "module": "CommonJS",                 
      "lib": ["ES2022"],                    
      "rootDir": "./src",                    
      "outDir": "./dist",                    
      "strict": true,                        
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,                  
      "moduleResolution": "Node",            
      "resolveJsonModule": true,             
      "allowSyntheticDefaultImports": true,  
      "noImplicitAny": true,                 
      "noUnusedLocals": true,                
      "noUnusedParameters": true,            
      "baseUrl": ".",                        
      "paths": {
        "@/*": ["src/*"]                    
      }
    },
    "include": ["src", "tests"],            
    "exclude": ["node_modules", "dist"]
}  
  
  
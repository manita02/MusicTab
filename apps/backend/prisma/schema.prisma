generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./music_tab.db"
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  email        String    @unique
  passwordHash String
  role         String
  createdAt    DateTime  @default(now())
  birthDate    DateTime
  urlImg       String
  sessions     Session[]
  tablaturas   Tab[]
}

model Genre {
  id         Int    @id @default(autoincrement())
  name       String @unique
  tablaturas Tab[]
}

model Instrument {
  id         Int    @id @default(autoincrement())
  name       String @unique
  tablaturas Tab[]
}

model Tab {
  id           Int        @id @default(autoincrement())
  title        String     @unique
  urlYoutube   String
  urlImagen    String
  urlPdf       String
  createdAt    DateTime   @default(now())
  userId       Int
  genreId      Int
  instrumentId Int
  instrument   Instrument @relation(fields: [instrumentId], references: [id])
  genre        Genre      @relation(fields: [genreId], references: [id])
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  tokenId   String   @id
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
